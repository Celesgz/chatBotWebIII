@model Botify.Data.EF.Usuario;

<!DOCTYPE html>
<html>
<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/css/registro.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


</head>
<body class="bodyRegistro">

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #0a233fed; color: #ffffff; display: flex; align-items: center; justify-content: center; z-index: 1000;">
            <div style="text-align: center; max-width: 400px; padding: 20px;">
                @if (ViewBag.Message == "El usuario ya existe.")
                {
                    <h3 style="font-size: 24px; font-weight: bold; margin-bottom: 20px;">Oops!</h3>
                    <p style="font-size: 18px;">El usuario ya existe. Por favor, regístrate con otro correo electrónico.</p>
                    <button onclick="window.location.href='@Url.Action("Registrarse", "Usuarios")'" style="margin-top: 20px; padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-weight: bold;">
                        Ir a registrarme
                    </button>
                }
                else
                {
                    <h3 style="font-size: 24px; font-weight: bold; margin-bottom: 20px;">¡Éxito!</h3>
                    <p style="font-size: 18px;">El usuario se registró correctamente.</p>
                    <button onclick="window.location.href='@Url.Action("IniciarSesion", "Usuarios")'" style="margin-top: 20px; padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-weight: bold;">
                        Ir a iniciar sesión
                    </button>
                }
            </div>
        </div>
    }


    @if (string.IsNullOrEmpty(ViewBag.Message) || !ViewBag.Message.Contains("Usuario registrado"))
    {
            <div class="container2">
                <h3>¡BIENVENIDOS!</h3>
                <p>Creá una cuenta para comenzar a chatear</p>
                <form asp-action="Registrarse" asp-controller="Usuarios" method="post">
                    <div class="form-group">
                        <label asp-for="Nombre">Username</label>
                        <input type="text" asp-for="Nombre" class="form-control" placeholder="name">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="name@gmail.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="**********">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                </form>
               
            <p class="mt-3">
                ¿Ya tienes cuenta?  <a asp-controller="Usuarios" asp-action="IniciarSesion" class="btn btn-outline-primary">Iniciar sesión</a>
            </p>
            </div>
    }
</body>
</html>

