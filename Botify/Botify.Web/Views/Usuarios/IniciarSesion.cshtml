@model Botify.Data.EF.Usuario;

<!DOCTYPE html>
<html>
<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/css/registro.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


</head>
<body class="bodyLoguin">
@if (!ViewData.ModelState.IsValid)
{
    var firstError = ViewData.ModelState.Values
        .SelectMany(v => v.Errors)
        .FirstOrDefault();

    if (firstError != null)
    {
        <div class="alert alert-danger">
            @firstError.ErrorMessage
        </div>
    }
}

<form asp-action="IniciarSesion" asp-controller="Usuarios" method="post">
    <div class="container3">
    <h3>¡HOLA OTRA VEZ!</h3>
    <p>Ingresa para comenzar a chatear</p>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="name@gmail.com" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="**********" />
    </div>
    <button type="submit" class="btn btn-primary">Ingresar</button>
            <p class="mt-3">
                ¿No tenes cuenta?  <a asp-controller="Usuarios" asp-action="Registrarse" class="btn btn-outline-primary">Registrarse</a>
            </p>
    </div>
</form>



</body>
</html>
